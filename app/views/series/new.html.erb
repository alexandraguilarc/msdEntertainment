<h1>Add your serie</h1>
<%= form_with model: @serie, method: :post do |form| %>
    <div class="col-6">
        <div>
            <%= form.label :name, "Name", class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
        </div>
        <div>
            <%= form.label :sypnosis, "Sypnosis", class: "form-label"%>
            <%= form.text_field :sypnosis, class: "form-control" %>
        </div>
        <div>
            <%= form.label :director, "Director", class: "form-label"%>
            <%= form.text_field :director, class: "form-control" %>
        </div>
        <div>
            <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>